{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "A VueJS + Lerna Monorepo Project",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && lerna exec --rm -rf dist",
    "lint": "lerna exec -- yarn lint",
    "test": "lerna exec -- yarn test",
    "refresh": "yarn && lerna bootstrap",
    "admin": "cd ./modules/admin && npm run serve",
    "admin:build": "cd ./modules/admin && npm run build",
    "admin:test": "cd ./modules/admin && npm run test",
    "dev:addition": "lerna run serve --stream --scope=@addition/ui",
    "build:addition": "lerna run build --stream --scope=@addition/ui",
    "test:addition": "lerna run test --stream --scope=@addition/ui",
    "dev:multiplication": "lerna run serve --stream --scope=@multiplication/ui",
    "build:multiplication": "lerna run build --stream --scope=@multiplication/ui",
    "test:multiplication": "lerna run test --stream --scope=@multiplication/ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vcpablo/vuejs-lerna-monorepo-sample.git"
  },
  "keywords": [
    "vuejs",
    "monorepo",
    "lerna"
  ],
  "author": "Pablo Veiga <vcpablo@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vcpablo/vuejs-lerna-monorepo-sample/issues"
  },
  "homepage": "https://github.com/vcpablo/vuejs-lerna-monorepo-sample#readme",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.26.0",
    "eslint-plugin-vue": "^7.9.0",
    "lerna": "^4.0.0"
  }
}
